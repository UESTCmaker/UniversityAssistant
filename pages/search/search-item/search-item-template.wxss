.item-container{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-top: 45rpx;
}

.item-info{
    display: flex;
    flex-direction: row;
}
.Img{
    width: 200rpx;
    height: 200rpx;
    margin: auto 20rpx auto 20rpx;
}
.name{
    margin: auto 20rpx auto 0;
    font-size: 40rpx;
    text-align: center;
    font-family: MicroSoft Yahei;
}

.info-text{
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    font-family: MicroSoft Yahei;
    color: #666;
    margin-top: 6rpx;
    margin-right: 20rpx;
}

.info-text text{
    margin-top: 10rpx;
}

.lhr{
    margin-top: 45rpx;
    height: 1px;
    width: 100%;
    background-color: #d9d9d9;
}

